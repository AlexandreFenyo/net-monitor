<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="XXXXXXXXXXXXXXXX %-5p: %d %c - %m%n" />
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="net.fenyo">
		<level value="debug" />
	</logger>

<!-- 	<logger name="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
		<level value="all" />
	</logger>
 -->
 	<logger name="org.springframework">
		<level value="all" />
	</logger>

  <logger name="java">
    <level value="debug" />
  </logger>
  <logger name="net">
    <level value="debug" />
  </logger>
  <logger name="org">
    <level value="debug" />
  </logger>

	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
